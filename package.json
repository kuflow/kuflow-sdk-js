{
  "name": "@kuflow/kuflow-sdk",
  "private": true,
  "description": "SDK for KuFlow.",
  "keywords": [
    "node",
    "typescript",
    "kuflow",
    "workflows",
    "temporalio"
  ],
  "homepage": "https://github.com/kuflow/kuflow-sdk-js",
  "bugs": {
    "url": "https://github.com/kuflow/kuflow-sdk-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kuflow/kuflow-sdk-js.git"
  },
  "license": "MIT",
  "author": "KuFlow S.L. <kuflow@kuflow.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:watch": "npm run build:watch --workspaces",
    "clean": "npm run clean --workspaces",
    "format": "npm run format:write",
    "format:write": "npm run prettier:write && npm run lint:fix",
    "lint": "npm run lint:check",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "npm run build",
    "pack": "npm pack 2>&1",
    "prettier": "npm run prettier:check",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "jest"
  },
  "devDependencies": {
    "@changesets/cli": "2.25.2",
    "@tsconfig/node16": "1.0.3",
    "@types/node": "16.11.9",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "dotenv": "16.0.3",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-deprecation": "1.3.3",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "lerna": "6.1.0",
    "nock": "13.2.9",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
